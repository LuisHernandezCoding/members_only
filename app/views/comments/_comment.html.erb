<% unless !comment.persisted? %>
  <tr class="border-t border-gray-100 hover:bg-gray-400">
    <td class="text-gray-800 text-sm text-right font-semibold align-top flex flex-row justify-end"> 
      <% if current_user == comment.user || current_user == @article.user %>
        <div class="align-middle text-center pr-2">
          <%= link_to "X", article_comment_path(@article, comment), data: { turbo_method: :delete, turbo_confirm: "Are you sure
          you want to delete this comment?" }, class: "bg-red-900 hover:bg-red-800 text-white font-bold py-0.5 px-1 rounded-full w-full text-center text-xs" %>
        </div>
      <% end %>
      <%= comment.user.name %>:
    </td>
    <td>
      <div class="flex flex-row justify-between">
        <span class="text-gray-800 text-sm align-top pl-2 break-all w-11/12">
          <%= comment.body %>
        </span>
        <span class="text-gray-500 text-xs font-semibold text-right">
          <%= comment.created_at.strftime("%d/%m/%y") %> <%= comment.created_at.strftime("%H:%M") %>
        </span>
      </div>
    </td>
  </tr>
<% end %>