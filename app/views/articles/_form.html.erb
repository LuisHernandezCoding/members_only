<%= form_with model: article, class: "w-full" do |form| %> %>
  <% # this form should contain only title and text fields, make it beautiful, using tailwindcss %>
  <div class="w-full mx-auto bg-white bg-opacity-90 shadow-lg rounded border border-gray-400">
    <h2 class="font-semibold text-gray-800 text-lg p-3">New Article</h2>
    <div class="p-3">
      <div class="flex flex-col">
        <label for="article_title" class="text-gray-800 font-semibold">Title</label>
        <%= form.text_field :title, class: "border border-gray-400 rounded p-2 focus:outline-none focus:border-gray-500" %>
        <% article.errors.full_messages_for(:title).each do |message| %>
          <%= message %>
        <% end %>
      </div>
      <div class="flex flex-col mt-3">
        <label for="article_text" class="text-gray-800 font-semibold">Text</label>
        <%= form.text_area :body, class: "border border-gray-400 rounded p-2 h-40 resize-none" %>
        <% article.errors.full_messages_for(:body).each do |message| %>
          <%= message %>
        <% end %>
      </div>
      <div class="flex justify-end mt-3 w-full">
        <%= link_to "Back", articles_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= form.submit "Create", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded ml-4" %>
      </div>
    </div>
  </div>
<% end %>