<section class="py-14 px-4 flex flex-row items-center">
  <section class="w-full sm:w-1/4 md:w-1/8 lg:w-1/12">
    <img src="<%= image_path('singing.svg') %>" alt="logo" class="w-full transform hover:scale-110 transition duration-500 ease-in-out">
  </section>
  <section class="w-full sm:w-3/4 md:w-1/2 lg:w-7/12 p-5">
    <div class="bg-white bg-opacity-70 shadow-lg rounded-lg border border-gray-200">
      <header class="px-5 py-4 border-b border-gray-100">
        <h2 class="font-semibold text-gray-800"><%= @article.title %></h2>
      </header>
      <div class="p-3">
        <p class="text-gray-800 text-sm"><%= @article.body %></p>
      </div>
      <footer class="px-5 pb-4 border-t border-gray-100">
        <div class="flex flex-row justify-between">
          <div class="flex flex-row items-center">
            <p class="text-gray-800 text-sm ml-2 font-semibold"><%= @article.user.name.capitalize %></p>
          </div>
          <div class="flex flex-row items-center">
            <p class="text-gray-800 text-sm ml-2"><%= @article.created_at.strftime("%d/%m/%Y") %> - <%= @article.created_at.strftime("%H:%M") %></p>
          </div>
        </div>
      </footer>
    </div>
  </section>
  <section class="w-full sm:w-4/4 md:w-3/8 lg:w-4/12 p-5">
    <div class="bg-white bg-opacity-70 shadow-lg rounded-lg border border-gray-200">
      <%= link_to "Modify", edit_article_path(@article) %>
      <%= link_to "Delete", article_path(@article), data: {
                          turbo_method: :delete,
                          turbo_confirm: "Are you sure?"
                        } %>
    </div>

    <h2>Add a comment:</h2>
</section>
