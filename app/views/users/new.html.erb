<div class="flex flex-col md:flex-row justify-center items-center">
  <section class="container flex-wrap flex-col items-center md:items-end text-center md:text-right p-2 lg:p-10">
    <div class="text-gray-800 dark:text-gray-200 sm:text-lg w-full lg:w-2/4 md:float-right">
      <h2 class="mb-1 md:mb-4 text-3xl font-extrabold tracking-tight text-gray-900 dark:text-gray-100">Register at Members-Only</h2>
      <p class="mb-2 md:mb-8 font-light lg:text-xl">A place for members to share their thoughts and ideas. Debate, discuss, and share your thoughts with other members.</p>
      <ul role="list" class="pt-4 md:pt-8 space-y-5 border-t border-gray-800 dark:border-gray-200 my-3 md:my-7 text-gray-800 dark:text-gray-200">
        <li class="flex space-x-3 justify-center md:justify-end">
          <span class="text-base font-medium leading-tight">Share your thoughts</span>
          <svg class="flex-shrink-0 w-5 h-5 text-purple-500 dark:text-purple-400 hidden md:block" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
        </li>
        <li class="flex space-x-3 justify-center md:justify-end">
          <span class="text-base font-medium leading-tight">Discuss with other members</span>
          <svg class="flex-shrink-0 w-5 h-5 text-purple-500 dark:text-purple-400 hidden md:block" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
        </li>
        <li class="flex space-x-3 justify-center md:justify-end">
          <span class="text-base font-medium leading-tight">Share your ideas</span>
          <svg class="flex-shrink-0 w-5 h-5 text-purple-500 dark:text-purple-400 hidden md:block" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
        </li>
      </ul>
    </div>
  </section>
  <section class="container flex-wrap flex-col items-start w-full md:w-1/2 flex">
    <main class="w-full p-6 rounded-lg backdrop-blur-sm shadow-2xl dark:shadow-gray-800 dark:shadow-lg">
      <section>
        <h3 class="text-gray-900 dark:text-gray-50 font-bold text-2xl text-center">Join to Members-Only!!</h3>
        <p class="text-gray-800 dark:text-gray-100 pt-2 text-center">Create your account here.</p>
      </section>
      <section>
        <%= form_for @user do |f| %>
          <div class="flex flex-col justify-between">
            <% square_class = "pt-1 rounded w-full" %>
            <% square_label = "block text-gray-800 dark:text-gray-200 text-sm font-bold mb-2 ml-3" %>
            <% square_input = "bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3" %>
            <% square_error = "text-red-500 text-xs italic" %>
            <div class="<%= square_class %>">
              <%= f.label :name, class: square_label %>
              <%= f.text_field :name, autofocus: true, class: square_input %>
              <% if @user.errors.messages[:name] %>
                <div class="<%= square_error %>"><%= @user.errors.messages[:name].join(", ") %></div>
              <% end %>
            </div>
            <div class="<%= square_class %>">
              <%= f.label :email, class: square_label %>
              <%= f.text_field :email, class: square_input %>
              <% if @user.errors.messages[:email] %>
                <div class="<%= square_error %>"><%= @user.errors.messages[:email].join(", ") %></div>
              <% end %>
            </div>
            <div class="<%= square_class %>">
              <%= f.label :password, class: square_label %>
              <%= f.password_field :password, class: square_input %>
              <% if @user.errors.messages[:password] %>
                <div class="<%= square_error %>"><%= @user.errors.messages[:password].join(", ") %></div>
              <% end %>
            </div>
            <div class="<%= square_class %>">
              <%= f.label :password_confirmation, class: square_label %>
              <%= f.password_field :password_confirmation, class: square_input %>
              <% if @user.errors.messages[:password_confirmation] %>
                <div class="<%= square_error %>"><%= @user.errors.messages[:password_confirmation].join(", ") %></div>
              <% end %>
            </div>
          </div>
          <div class="flex w-12/12 mt-4 mx-6">
            <%= f.submit "Sign up!", class: "w-full bg-mediumpurple hover:bg-darkpurple text-white font-bold py-2 rounded shadow-lg hover:shadow-xl transition duration-200 block" %>
          </div>
        <% end %>
      </section>
    </main>
    <div class="max-w-lg mx-auto text-center xl:mt-12 mb-6">
        <p class="text-gray-900 dark:text-gray-100">Already a member? <a href="<%= login_path %>" class="font-bold hover:underline">Sign in!</a></p>
    </div>
  </section>
</div>