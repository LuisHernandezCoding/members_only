<div class="flex flex-row justify-center items-center h-screen">
  <section class="container mx-auto flex-wrap flex-col items-end hidden md:flex">
    <%= image_tag "register.svg", class: "w-2/4" %>
  </section>
  <section class="container py-10 mx-auto flex flex-wrap flex-col items-center">
    <main class="max-w-1/2 mx-auto p-6 mt-10 rounded-lg backdrop-blur-3xl shadow-2xl">
      <section>
        <h3 class="text-gray-50 font-bold text-2xl text-center">Join to Members-Only!!</h3>
        <p class="text-gray-100 pt-2 text-center">Create your account here.</p>
      </section>
      <section class="mt-10">
        <%= form_for @user do |f| %>
          <div class="flex flex-col justify-between">
            <% square_class = "pt-1 rounded w-full" %>
            <% square_label = "block text-gray-200 text-sm font-bold mb-2 ml-3" %>
            <% square_input = "bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3" %>
            <% square_error = "text-red-500 text-xs italic" %>
            <div class="<%= square_class %>">
              <%= f.label :name, class: square_label %>
              <%= f.text_field :name, autofocus: true, class: square_input %>
              <% if @user.errors.messages[:name] %>
                <div class="<%= square_error %>"><%= @user.errors.messages[:name].join(", ") %></div>
              <% end %>
            </div>
            <div class="<%= square_class %>">
              <%= f.label :email, class: square_label %>
              <%= f.text_field :email, class: square_input %>
              <% if @user.errors.messages[:email] %>
                <div class="<%= square_error %>"><%= @user.errors.messages[:email].join(", ") %></div>
              <% end %>
            </div>
            <div class="<%= square_class %>">
              <%= f.label :password, class: square_label %>
              <%= f.password_field :password, class: square_input %>
              <% if @user.errors.messages[:password] %>
                <div class="<%= square_error %>"><%= @user.errors.messages[:password].join(", ") %></div>
              <% end %>
            </div>
            <div class="<%= square_class %>">
              <%= f.label :password_confirmation, class: square_label %>
              <%= f.password_field :password_confirmation, class: square_input %>
              <% if @user.errors.messages[:password_confirmation] %>
                <div class="<%= square_error %>"><%= @user.errors.messages[:password_confirmation].join(", ") %></div>
              <% end %>
            </div>
          </div>
          <div class="flex w-12/12 mt-4 mx-6">
            <%= f.submit "Sign up!", class: "w-full bg-mediumpurple hover:bg-darkpurple text-white font-bold py-2 rounded shadow-lg hover:shadow-xl transition duration-200 block" %>
          </div>
        <% end %>
      </section>
    </main>
    <div class="max-w-lg mx-auto text-center xl:mt-12 mb-6">
        <p class="text-white">Already had an account? <a href="<%= login_path %>" class="font-bold hover:underline">Sign in</a>.</p>
    </div>
  </section>
</div>